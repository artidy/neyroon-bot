# Telegram Bot
BOT_TOKEN=your_bot_token_here

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/neyroon_bot?schema=public"

# Payment Systems
# ЮKassa (Россия)
YUKASSA_SHOP_ID=your_shop_id
YUKASSA_SECRET_KEY=your_secret_key

# Kaspi (Казахстан)
KASPI_MERCHANT_ID=your_merchant_id
KASPI_MERCHANT_SECRET=your_merchant_secret

# Prodamus (РФ + Казахстан)
PRODAMUS_API_KEY=your_prodamus_api_key
PRODAMUS_SECRET_KEY=your_prodamus_secret_key
PRODAMUS_PROJECT_ID=your_project_id

# Bot Settings
BOT_USERNAME=your_bot_username
WEBHOOK_URL=https://your-domain.com

# Subscription Settings
SUBSCRIPTION_PRICE=4000
SUBSCRIPTION_CURRENCY=KZT
SUBSCRIPTION_DURATION_DAYS=30

# Admin Panel
ADMIN_PORT=3000
ADMIN_SECRET=your_admin_secret_key
JWT_SECRET=your_jwt_secret

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Scheduler
TIMEZONE=Asia/Almaty
DEFAULT_LESSON_TIME=10:00
